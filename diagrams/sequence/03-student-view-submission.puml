@startuml
skinparam monochrome true
skinparam shadowing false

title Student views own submission

actor "Student" as studentActor
participant ":StudentDashboard" as dash
participant "student:Student" as student
participant "submission:Submission" as submission

studentActor -> dash : click "View My Submission"
activate dash
dash -> student : getSubmission()
student --> dash : submission | null

alt submission == null
  dash -> dash : JOptionPane.showMessageDialog("No submission yet!")
else submission != null
  dash -> submission : getTitle()\ngetAbstractText()\ngetSupervisor()\ngetPresentationType()\ngetFilePath()
  submission --> dash : details
  dash -> dash : JOptionPane.showMessageDialog(details)
end

deactivate dash
@enduml

