@startuml
skinparam monochrome true
skinparam shadowing false

title Student registers presentation and uploads file

actor "Student" as studentActor
participant ":StudentDashboard" as dash
participant ":RegistrationForm" as form
participant "student:Student" as student
participant "submission:Submission" as submission

studentActor -> dash : click "Register Presentation"
activate dash
dash -> form : new RegistrationForm(student)
activate form

studentActor -> form : enter title, abstract,\nsupervisor, type
studentActor -> form : click "Upload File"
form -> form : JFileChooser.showOpenDialog()
alt file chosen
  form -> form : selectedFilePath = file.getAbsolutePath()
  form -> form : fileLabel.setText(file.getName())
else cancel
  form -> form : selectedFilePath stays null
end

studentActor -> form : click "Submit"
alt validation OK
  form -> submission : new Submission(title, abstract,\nsupervisor, type, filePath)
  form -> student : setSubmission(submission)
  form -> form : JOptionPane.showMessageDialog("Registration Successful!")
  form -> form : dispose()
else validation fails
  form -> form : JOptionPane.showMessageDialog(error)
end

deactivate form
deactivate dash
@enduml

